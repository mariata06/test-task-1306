doctype html

include ../components

block variables

html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Международный Васюкинский турнир по шахматам")
    link(rel="icon", href="img/content/favicon.ico")
    link(rel="apple-touch-icon" sizes="180x180" href="img/content/apple-touch-icon.webp")
    link(rel="icon" type="image/webp" sizes="32x32" href="img/content/favicon-32x32.webp")
    link(rel="icon" type="image/webp" sizes="16x16" href="img/content/favicon-16x16.webp")
    link(rel="manifest" href="img/content/site.webmanifest" crossorigin="use-credentials")
    link(rel="mask-icon" href="img/content/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
    link(rel="preload", href="fonts/merriweather-regular.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/golos-text-regular.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/golos-text-medium.woff2", as="font", crossorigin="anonymous")
    link(rel="stylesheet", href="css/style.min.css")

  body
    .wrapper(class=wrapperMods)

      block main

      if (hasFooter)
        +footer(footerMods)

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
